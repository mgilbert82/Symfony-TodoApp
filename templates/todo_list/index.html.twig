{% extends "base.html.twig" %}

{% block body %}
	<div class="container d-flex flex-wrap">
		{% for list in lists %}
			<div class="card m-2" style="width: 18rem;">
				<div class="card-body">
					<h5 class="card-title text-center mb-3" style="color: {{ list.color }}">{{ list.name }}</h5>
					{% for task in list.tasks %}
						<div class="card-text">
							<div class="input-group mb-3">
								<div class="input-group-text w-100 d-flex justify-content-between">
									<input type="checkbox" {{ task.completed ? "checked" : "" }} onchange="window.location.href='/update-task-status/{{ task.id }}'">
									{{ task.title }}
									<div class="align-items-end">
										<a href="/update-task/{{ task.id }}" class="text-warning me-3">
											<i class="fas fa-edit"></i>
										</a>
										<a href="/delete-task/{{ task.id }}" class="text-danger">
											<i class="fas fa-trash"></i>
										</a>
									</div>
								</div>
							</div>
						</div>
					{% endfor %}
					<div class="d-flex justify-content-center">
						<a href="/create-task/{{ list.id }}" class=" btn text-success fs-5">
							<i class="fa-solid fa-circle-plus"></i>
						</a>
					</div>
					<div class="d-flex justify-content-between w-100">
						<a href="/update-list/{{ list.id }}" class="btn btn-warning">
							<i class="fas fa-edit"></i>
						</a>
						<a href="/delete-list/{{ list.id }}" class="btn btn-danger">
							<i class="fas fa-trash"></i>
						</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
